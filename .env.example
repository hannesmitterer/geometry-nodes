# Server Configuration
PORT=3000
WS_PORT=3001
HOST=localhost
NODE_ENV=development

# Security (CRITICAL: Generate a secure random 64+ character string for production)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production-must-be-at-least-64-characters-long-use-high-entropy-random-string
JWT_EXPIRES_IN=1h

# CORS
CORS_ORIGIN=*

# API Configuration
API_BASE_URL=http://localhost:3000
API_WS_URL=ws://localhost:3001

# Logging
LOG_LEVEL=INFO

# Cache
CACHE_ENABLED=true
CACHE_TTL=300000
CACHE_MAX_SIZE=1000

# Features
FEATURES_ANALYTICS=false
FEATURES_I18N=false
FEATURES_THEMES=false
FEATURES_EXPORT=false
